@page "{id}"
@model Web.Pages.BlogPostModel
@{
    ViewData["Title"] = "BlogPost";
}

<div class="blogPost mt-5 mb-5">
    <div class="header">
        <img src="~/lib/images/blogpost.jpg" alt="@Model.BlogPost.CreatedBy" asp-append-version=true>

        <p><span>@Model.BlogPost.CreatedBy.</span> @Model.BlogPost.CreatedOn.ToShortDateString()</p>
        <h4>@Model.BlogPost.Description</h4>
    </div>

    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="justify-content-between p-2 px-3">
                    <div class="flex-column align-items-center">
