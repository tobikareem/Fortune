                            </span>
                            </div>

                            <div class="d-flex flex-row mt-1 ellipsis">
                            <small class="mr-2">@Model.BlogPost.Date</small>
                            <i class="fa fa-ellipsis-h"></i>
                            </div>*@

                        <div class="content text-justify text-center">
                            @Html.Raw(@Model.BlogPost.Content)
                        </div>

                        <div class="p-2">
                            <hr>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex flex-row icons d-flex align-items-center">
                                    <i class="fa fa-heart"></i>
                                </div>

                                <div class="d-flex flex-row muted-color">
                                    <span>
                                        2 likes
                                    </span>

                                    <span>
                                        2 comments
                                    </span>
                                </div>
                            </div>

                            <hr>

                            <div class="comments">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex flex-column ml-2 ms-5 user-part">
                                        <span class="name">Yinka Adegnaju</span>
                                        <small class="comment-text"> I like this a lot</small>

                                    </div>
                                    <div class="flex-row align-items-center status">
                                        <small>
